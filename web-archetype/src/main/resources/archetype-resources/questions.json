{
  "docker": {
    "label": "Docker",
    "order": 3,
    "questions": [
      {
        "name": "enabled",
        "style": "confirm",
        "message": "Enable Docker support ?",
        "default": "no"
      }
    ]
  },
  "persistence": {
    "label": "Persistence",
    "order": 1,
    "questions": [
      {
        "name": "enabled",
        "style": "confirm",
        "message": "Enable persistence support ?",
        "default": "no"
      },
      {
        "name": "type",
        "conditions": [
          {
            "ref": "enabled",
            "op": "eq",
            "val": true
          }
        ],
        "style": "list",
        "message": "Choose your persistence type",
        "values": [
          {
            "name": "jpaHibernate",
            "label": "JPA with Hibernate and HikariCP pooling"
          },
          {
            "name": "mongo",
            "label": "MongoDB with Morphia"
          }
        ]
      },
      {
        "name": "reldb",
        "conditions": [
          {
            "ref": "type",
            "op": "eq",
            "val": "jpaHibernate"
          }
        ],
        "style": "list",
        "message": "Choose your database",
        "values": [
          {
            "name": "postgres",
            "label": "PostgreSQL"
          },
          {
            "name": "mariadb",
            "label": "MariaDb"
          },
          {
            "name": "mysql",
            "label": "MySQL"
          }
        ]
      }
    ]
  },
  "w20": {
    "label": "W20",
    "order": 2,
    "questions": [
      {
        "name": "enabled",
        "style": "confirm",
        "message": "Add a W20 UI ?",
        "default": "no"
      },
      {
        "name": "theme",
        "conditions": [
          {
            "ref": "enabled",
            "op": "eq",
            "val": true
          }
        ],
        "style": "list",
        "message": "Choose your W20 theme",
        "values": [
          {
            "name": "w20BusinessTheme",
            "label": "W20 business theme"
          },
          {
            "name": "w20SimpleTheme",
            "label": "W20 simple theme"
          },
          {
            "name": "w20MaterialTheme",
            "label": "W20 material theme"
          },
          {
            "name": "w20NoTheme",
            "label": "No theme"
          }
        ]
      }
    ]
  }
}
