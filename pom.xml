<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.seedstack.poms</groupId>
        <artifactId>parent-internal</artifactId>
        <version>2.1.1</version>
    </parent>

    <groupId>org.seedstack</groupId>
    <artifactId>distribution</artifactId>
    <version>15.11-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <poms.version>2.1.1</poms.version>

        <seed.version>2.1.0</seed.version>
        <business.version>2.1.0</business.version>

        <audit-addon.version>2.1.0</audit-addon.version>
        <monitoring-addon.version>2.1.0</monitoring-addon.version>
        <elasticsearch-addon.version>2.1.0</elasticsearch-addon.version>
        <i18n-addon.version>2.1.0</i18n-addon.version>
        <io-addon.version>2.1.0</io-addon.version>
        <javamail-addon.version>2.1.0</javamail-addon.version>
        <jcache-addon.version>2.1.0</jcache-addon.version>
        <jdbc-addon.version>2.1.1</jdbc-addon.version>
        <jms-addon.version>2.1.0</jms-addon.version>
        <jpa-addon.version>2.1.1</jpa-addon.version>
        <ldap-addon.version>2.1.0</ldap-addon.version>
        <mongodb-addon.version>1.0.0</mongodb-addon.version>
        <neo4j-addon.version>1.0.0</neo4j-addon.version>
        <redis-addon.version>1.0.0</redis-addon.version>
        <scheduling-addon.version>2.1.0</scheduling-addon.version>
        <solr-addon.version>1.0.0</solr-addon.version>
        <spring-bridge-addon.version>2.2.0</spring-bridge-addon.version>
        <validation-addon.version>2.1.0</validation-addon.version>
        <w20-bridge-addon.version>2.1.1</w20-bridge-addon.version>
        <web-services-addon.version>2.1.1</web-services-addon.version>
    </properties>

    <modules>
        <module>seedstack-bom</module>
        <module>app-composite</module>
        <module>batch-composite</module>
        <module>batch-archetype</module>
        <module>domain-composite</module>
        <module>domain-archetype</module>
        <module>web-composite</module>
        <module>web-archetype</module>
        <module>rest-composite</module>
        <module>rest-archetype</module>
    </modules>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.5</version>
                    <configuration>
                        <escapeString>\</escapeString>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.jfrog.buildinfo</groupId>
                    <artifactId>artifactory-maven-plugin</artifactId>
                    <version>2.4.0</version>
                    <executions>
                        <execution>
                            <id>build-info</id>
                            <phase>none</phase>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.5.1</version>
                    <configuration>
                        <pushChanges>true</pushChanges>
                        <autoVersionSubmodules>true</autoVersionSubmodules>
                        <scmCommentPrefix>[ci skip][release]:</scmCommentPrefix>
                        <tagNameFormat>v@{project.version}</tagNameFormat>
                        <useReleaseProfile>false</useReleaseProfile>
                        <arguments>-Pbintray,javadoc,distribution-release</arguments>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <pluginRepositories>
        <pluginRepository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>bintray-jfrog-jfrog-jars</id>
            <name>bintray-plugins</name>
            <url>http://dl.bintray.com/jfrog/jfrog-jars</url>
        </pluginRepository>
    </pluginRepositories>

    <scm>
        <url>https://github.com/seedstack/distribution</url>
        <connection>scm:git:git://github.com/seedstack/distribution.git</connection>
        <developerConnection>scm:git:git@github.com:seedstack/distribution.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <profiles>
        <profile>
            <id>snapshots</id>
            <repositories>
                <repository>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <id>ojo-libs-snapshot</id>
                    <name>ojo-snapshots</name>
                    <url>https://oss.jfrog.org/artifactory/libs-snapshot</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>bintray</id>
            <repositories>
                <repository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <id>bintray-seedstack-jars</id>
                    <name>bintray</name>
                    <url>http://dl.bintray.com/seedstack/jars</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>distribution-release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                                <configuration>
                                    <keyname>release@seedstack.org</keyname>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <distributionManagement>
        <snapshotRepository>
            <id>sonatype-nexus-snapshots</id>
            <name>Sonatype Nexus Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>sonatype-nexus-staging</id>
            <name>Nexus Release Repository</name>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>
</project>
